%h1 Geos

.row
  .columns.medium-19
  .columns.medium-3
    = link_to "New Geo", new_geo_path, class: 'button'
    %a.button{href: '#', data: {reveal_id: 'ensMap', reveal: true, no_turbo: true}}
      New Geo
.row
  %table
    - @geos.each do |geo|
      %tr
        %td= geo.name
        %td= link_to 'Edit', edit_geo_path(geo), class: 'button'
        %td= link_to 'Destroy', geo, :method => :delete, :data => { :confirm => 'Are you sure?' }
